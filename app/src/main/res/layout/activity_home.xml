<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context="HomeActivity">

    <!-- Add a RecyclerView to display the list of latest songs -->

    <ImageButton
        android:id="@+id/bennett_logo"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/img_1"
        app:layout_constraintBottom_toTopOf="@+id/latest_songs_recyclerview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/greeting_textview"
        android:layout_width="257dp"
        android:layout_height="69dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/latest_songs_title_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/latest_songs_title_textview"
        android:layout_width="262dp"
        android:layout_height="73dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="141dp"
        android:padding="16dp"
        android:text="Latest Songs"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeting_textview" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/latest_songs_recyclerview"
        android:layout_width="411dp"
        android:layout_height="511dp"
        android:layout_marginTop="97dp"
        android:background="@drawable/recycler_view_border"
        android:contextClickable="true"
        android:padding="16dp"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/latest_songs_title_textview" />


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="414dp"
        android:layout_height="68dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ARTIST_Btn"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:padding="16dp"
            android:text="ARTISTS"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_column="0"
            app:layout_row="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Upload_Btn"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:background="@color/black"
            android:padding="16dp"
            android:text="Upload Music"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_column="1"
            app:layout_row="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Profile_Btn"
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:padding="16dp"
            android:text="Profile"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_column="2"
            app:layout_row="0" />


    </androidx.gridlayout.widget.GridLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
